<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodItemScreen"
    >


    <!-- Main content view -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- Include your toolbar layout -->
        <include layout="@layout/toolbar" />

    <TextView
        android:id="@+id/user"
        android:layout_width="280sp"
        android:layout_height="30sp"
        android:text="User: "
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/item"
        app:layout_constraintTop_toBottomOf="@+id/item" />

    <TextView
        android:id="@+id/item"
        android:layout_width="280sp"
        android:layout_height="50sp"
        android:text="ITEM"
        android:textAlignment="textStart"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/remove"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="360sp"
        android:layout_height="60sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:gravity="center_horizontal|center_vertical"
        android:stateListAnimator="@anim/nav_default_enter_anim"
        android:text="Remove item"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share" />

    <Button
        android:id="@+id/share"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="360sp"
        android:layout_height="60sp"
        android:layout_marginStart="16dp"
        android:background="@color/black"
        android:gravity="center_horizontal|center_vertical"
        android:stateListAnimator="@anim/nav_default_enter_anim"
        android:text="Share and notify housemates"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/useBy" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/purchased"
        android:layout_width="360sp"
        android:layout_height="30sp"
        android:layout_marginStart="16dp"
        android:text="Purchased: DATE"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/useBy"
        android:layout_width="360sp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:text="Use by: DATE"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purchased" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="360sp"
        android:layout_height="240sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

</androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>